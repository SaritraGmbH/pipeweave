{
  "name": "pipeweave",
  "version": "0.1.0",
  "private": true,
  "description": "A lightweight, debuggable task orchestration framework for serverless architectures",
  "keywords": [
    "workflow",
    "orchestration",
    "pipeline",
    "task",
    "serverless",
    "dag"
  ],
  "homepage": "https://github.com/pipeweave/pipeweave",
  "repository": {
    "type": "git",
    "url": "https://github.com/pipeweave/pipeweave.git"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "sdks/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:packages": "npm run build --workspace=@pipeweave/shared && npm run build --workspace=@pipeweave/sdk && npm run build --workspace=@pipeweave/orchestrator && npm run build --workspace=@pipeweave/cli",
    "dev": "npm run dev --workspaces --if-present --parallel",
    "dev:orchestrator": "npm run dev --workspace=@pipeweave/orchestrator",
    "dev:ui": "npm run dev --workspace=@pipeweave/ui",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "prepare": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build:packages && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}